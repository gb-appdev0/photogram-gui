<h1><%= @name %></h1>

<dl>
  <dt>ID</dt>
  <dd><%= @user.id %></dd>

  <dt>Edit User</dt>
  <dd>
    <form action="/update_user/<%= @user.id %>">
    <label for="edit_user">Username</label>
    <input type="text" id="edit_user" name="edit_username" value="<%= @user.username %>">
   <button>Update user</button>
  </form>
</dl>

<h2>Own photos (<%= @user.own_photos.count %>)</h2>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Owner</th>
    <th>Caption</th>
    <th>Posted</th>
    <th></th>
  </tr>

  <% @user.own_photos.each do |a_photo| %>
    <tr>
      <td><img src=<%= a_photo.image%> style="width:300px"></td>
      <td><%= a_photo.poster.username %></td>
      <td><%= a_photo.caption %></td>
      <td><%= a_photo.created_at %></td>
      <td><a href="/photos/<%= a_photo.id %>">Show details</a></td>
    </tr>
  <% end %>

</table>